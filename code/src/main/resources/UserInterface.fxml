<?import javafx.scene.control.Button ?>
<?import javafx.scene.control.cell.PropertyValueFactory ?>
<?import javafx.scene.control.CheckBox ?>
<?import javafx.scene.control.Label ?>
<?import javafx.scene.control.TableColumn ?>
<?import javafx.scene.control.TableView ?>
<?import javafx.scene.layout.GridPane ?>

<GridPane fx:controller="view.UserInterface"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">

    <GridPane fx:id="configPanel" GridPane.rowIndex="0" GridPane.columnIndex="0">
        <Button fx:id="changeCurrentDirectoryButton" text="Change Directory..."
                onAction="#changeCurrentDirectory"
                GridPane.rowIndex="0" GridPane.columnIndex="0"></Button>
        <Label fx:id="currentDirectory" text=""
               GridPane.rowIndex="0" GridPane.columnIndex="1"></Label>
        <CheckBox fx:id="isUsingFileExtensionsCheckBox" text="Include file extensions"
                  onAction="#toggleFileExtensions"
                  GridPane.rowIndex="1" GridPane.columnIndex="0"></CheckBox>
    </GridPane>

    <TableView fx:id="tableView" prefHeight="500"
               GridPane.rowIndex="1" GridPane.columnIndex="0">
        <columns>
             <TableColumn fx:id="parentDirectory" text="Parent Directory" prefWidth="300">
                <cellValueFactory>
                    <PropertyValueFactory property="parentDirectory" />
                </cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="fileName" text="File Name" prefWidth="300">
                <cellValueFactory>
                    <PropertyValueFactory property="fileName" />
                </cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="newName" text="New Name" prefWidth="300">
                 <cellValueFactory>
                    <PropertyValueFactory property="newName" />
                 </cellValueFactory>
            </TableColumn>
        </columns>
        <sortOrder>
            <fx:reference source="parentDirectory"/>
        </sortOrder>
    </TableView>
</GridPane>